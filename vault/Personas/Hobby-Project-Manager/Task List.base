source: Personas/Hobby-Project-Manager/
filters:
  and:
    - file.inFolder("Personas/Hobby-Project-Manager")
    - file.ext == "md"
properties:
  note.title:
    width: 200
  note.summary:
    width: 200
  file.basename:
    width: 150
  note.status:
    width: 100
  note.priority:
    width: 100
  note.calendar:
    width: 120
  note.parent:
    width: 120
  note.tags:
    width: 120
  note.context:
    width: 100
  note.location:
    width: 120
  note.date_start_scheduled:
    width: 120
  note.date_end_scheduled:
    width: 120
  note.date_due:
    width: 120
views:
  - type: planner-task-list
    name: Task List
    groupBy:
      property: calendar
      direction: ASC
    order:
      - title
      - calendar
      - status
      - priority
      - date_start_scheduled
      - date_end_scheduled
    sort:
      - property: priority
        direction: ASC
      - property: status
        direction: DESC
  - type: table
    name: Table
